---
layout: layouts/base.njk
templateClass: tmpl-post
---
<section class="hero-image">
    <img class="background__image" src="/img/{{ image }}" alt="{{ title }}"  />
    <div class="post-title">
        <h1 class="shimmer">{{ title }}</h1>
    </div>
</section>

<section class="content">
  {{ content | safe }}

  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}

  <hr>

  {%- for tag in tags | filterTagList %}
  {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
  <div class="tag">
    <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
  </div>
  {%- endfor %}

  {%- if nextPost or previousPost %}
  <div class="bottom-nav">
    {%- if nextPost %}<span class="next">Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></span>{% endif %}
    {%- if previousPost %}<span class="previous">Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></span>{% endif %}
  </div>
  {%- endif %}
</section>
